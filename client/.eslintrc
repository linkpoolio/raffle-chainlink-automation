{
  "root": true,
  "plugins": ["prettier", "testing-library"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "plugin:testing-library/react"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-trailing-spaces": ["warn"],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "react/display-name": ["off"],
    "react/prop-types": [
      "off",
      {
        "ignore": ["navigation"]
      }
    ],
    "no-unused-vars": "error",
    "no-inner-declarations": 0,
    "no-console": ["warn", { "allow": ["error"] }],
    "jsx-a11y/anchor-is-valid": ["off"],
    "prettier/prettier": "error",
    "testing-library/await-async-utils": 0,
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "testing-library/prefer-screen-queries": "off"
  },
  "globals": {
    "dataLayer": "writable",
    "envAlgoliaAppId": "readonly",
    "envAlgoliaApiKey": "readonly",
    "envCoreApiUrl": "readonly",
    "envApiKey": "readonly",
    "envApiSecret": "readonly",
    "envImgixUrl": "readonly",
    "envMaintenanceMode": "readonly",
    "envAlert": "readonly",
    "envTestingMode":  "readonly",
    "envAllowedChainIds":  "readonly",
    "envMerkleApiUrl": "readonly"
  }
}
